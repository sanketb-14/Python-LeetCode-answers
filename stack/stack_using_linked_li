# Linked List implementation of stack in Python
import math
class Node:
  def __init__(self,d):
    self.data = d
    self.next = None
  class MyStack:
    def __init__(self):
      self.head =None
      self.sz = 0
      
    def push(self,x):
      temp = Node(x)
      temp.next = self.head
      self.head = temp
      self.sz = self.sz + 1
      
    def size(self):
      return self.sz

    def peek(self):
      if self.head ==None:
        return math.inf
      return self.head.data

    def pop(self):
      if self.head == None:
        return math.inf
      res = head.data
      self.head = self.head.next
      self.sz=self.sz - 1
      return res


      # end of MyStack Class
s = MyStack()
s.push(10)
s.push(20)

      
      
      
      
  
  

  
      
      
      
   
      
      
      
      
   

   
    
    
    
  
